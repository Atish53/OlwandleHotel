@model OlwandleHotel.Models.Tour

@{
    ViewBag.Title = "Tour Details";
}


<h2 class="text-center">@Model.TourName</h2>
<h4 class="text-center">An in-depth description of this tour...</h4>

<div>
    <hr />
    <div class="col-md-offset-2 col-md-10" style=" left:11.5%; padding-bottom: 30px">
        <img src="data:image;base64,@System.Convert.ToBase64String(Model.TourPicture)" class="img-rounded" style="min-width: 360px; max-width: 480px; width: 480px; min-height: 200px; max-height: 280px; height: 280px; background-size: contain;">
    </div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TourName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TourName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TourDestinations)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TourDestinations)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TourLocation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TourLocation)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TourPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TourPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TourTicketsRemaining)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TourTicketsRemaining)
        </dd>


    </dl>
</div>
<p>
    <a href="@Url.Action(actionName: "Book", controllerName: "Tours", routeValues: new { id = Model.TourId})" class="btn btn-info"><i class="fa fa-shopping-cart"></i>Book Now</a>
    <a href="@Url.Action(actionName: "Index", controllerName: "Tours")" class="btn btn-success"><i class="fa fa-shopping-cart"></i>View Other Tours</a>
</p>
