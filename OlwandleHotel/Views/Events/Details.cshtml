@model OlwandleHotel.Models.Event

@{
    ViewBag.Title = "Details";
}


<h2>Detailed View</h2>

<div>
    <h3>An in-depth description of this image...</h3>
    <p class="text-info text-center">The name, description, tags, download link and confidence of accuracy are provided below. </p>
    <hr />
    <div class="col-md-offset-2 col-md-10" style="left: 11.5%;">
        <img src="@Model.ImageURI" class="img-rounded" style="min-width: 360px; max-width: 480px; width: 480px; min-height: 200px; max-height: 280px; height: 280px; background-size: contain;">
    </div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageURI)
        </dt>

        <dd>
            <a href="@Model.ImageURI">@Model.ImageURI</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tags)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tags)
        </dd>

        <dt>
            @Html.DisplayName("Confidence in accuracy")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PercentageAccuracy)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to Events", "Index")
</p>
