@model OlwandleHotel.Models.TourBooking

@{
    ViewBag.Title = "Tour Booking Details";
}

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center text-success">Tour: @Model.Tour.TourName</h2>
<h4 class="text-center">Your Receipt For Tour Booking @Model.TicketNumber</h4>
<h5 class="text-center text-info">Tour Details</h5>

<div>
    <hr />
    <div class="col-md-offset-2 col-md-10" style=" left:11.5%; padding-bottom: 30px">
        <img src="data:image;base64,@System.Convert.ToBase64String(Model.Tour.TourPicture)" class="img-rounded" style="min-width: 360px; max-width: 480px; width: 480px; min-height: 200px; max-height: 280px; height: 280px; background-size: contain;">
    </div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Tour.TourName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tour.TourName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tour.TourPrice)
        </dt>

        <dd>
            R @Html.DisplayFor(model => model.Tour.TourPrice)
        </dd>     

    </dl>
</div>
<hr />
<h2 class="text-center text-success">Additional Details</h2>

<div>
    <h4 class="text-center text-info">Details of your Tour Booking</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TicketNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TicketNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CustomerSurname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerSurname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateBooked)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateBooked)
        </dd>

    </dl>

    <h2 class="text-center text-success">Waypoint: </h2>
    <iframe width="800"
            height="480"
            frameborder="0" style="position : relative; left : 15%;"
            src="https://www.google.com/maps/embed/v1/directions?key=AIzaSyBNcE7mezvGDziXJG3p8wvchw5SSZMnUiQ&origin='@Model.Address'&destination='@Model.Tour.TourLocation'&avoid=tolls|highways" allowfullscreen>
    </iframe>
    <br />
    <br />

</div>
<p>
    <a href="@Url.Action(actionName: "MyTours", controllerName: "Manage")" class="btn btn-success"><i class="fa fa-shopping-cart"></i>Return To Tour History</a>
</p>
