@model IEnumerable<OlwandleHotel.Models.Room>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="container">
    <br />
    <p class="text-success text-center">Hotel Rooms In Durban</p>
    <hr>
    <div class="row">
        @foreach (var item in Model.Where(x => x.RoomLocation == "Durban"))
        {
        <div class="col-md-4">
            <h4 class="modal-title text-center">@item.NumBeds Bedroom Suite - R @item.Cost</h4>
            <a href="#" data-toggle="modal" data-target="#@item.RoomId">
                <img src="data:image;base64,@System.Convert.ToBase64String(item.RoomPicture)" class="img-responsive img-rounded" width="100%" height="100%" style="min-width: 360px; max-width: 360px; width: 360px; min-height: 200px; max-height: 200px; height: 200px; background-size: contain;" />
            </a>

            <!-- Modal -->
            <div class="modal fade" id="@item.RoomId" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title text-center">@item.RoomLocation</h4>
                        </div>
                        <div class="modal-body">
                            <img src="data:image;base64,@System.Convert.ToBase64String(item.RoomPicture)" width="100%" height="100%" />
                            <br />
                            <br />

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Details", "Rooms", new { id = item.RoomId })'">View Room</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    </div>

                </div>
            </div>
            <h4 class="modal-title text-center">@item.RoomAddress</h4>
        </div>
        }
    </div>
</div>

